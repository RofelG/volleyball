<!DOCTYPE html>
<html lang="en">
  
<%- include('../partials/head'); %>

<body>

<main>
  <div class="col-12 col-md-4 col-lg-3 col-xl-2 position-absolute top-50 start-50 translate-middle">
    <div class="card m-4 m-md-0">
      <div class="card-body">
        <h5 class="card-title">Login</h5>
        <form class="row" data-action="/api/login">
          <div class="form-group col-12 mb-3">
            <div class="form-floating">
              <input type="email" class="form-control" id="user_email" name="user_email" placeholder="Email">
              <label for="user_email" class="form-label">Email</label>
            </div>
          </div>
          <div class="form-group col-12 mb-3">
            <div class="form-floating">
              <input type="password" class="form-control" id="user_password" name="user_password" placeholder="Password">
              <label for="user_password" class="form-label">Password</label>
            </div>
          </div>
          <div class="form-group col-12">
            <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>
          </div>
          <div class="form-group col-12">
            <p class="text-center">Not a member? <a href="/register">Sign Up</a></p>
          </div>
        </form>
      </div>
    </div>
  </div>
</main>

<script src="/static/js/site.js"></script>

</body>
</html>