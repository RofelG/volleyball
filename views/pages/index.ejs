<!DOCTYPE html>
<html lang="en">
  
<%- include('../partials/head'); %>

<body>

<%- include('../partials/nav'); %>

<main>
  <div class="container-fluid px-3 px-md-5">
    <div class="row">
      <div class="col-12">
        <div class="d-flex flex-row filter-row">
          <div class="filter-btn d-flex flex-column py-4 pe-5">
            <i class="fa-solid fa-volleyball"></i>
            <span>Volleyball</span>
          </div>
          <div class="filter-btn d-flex flex-column py-4 pe-5">
            <i class="fa-solid fa-basketball"></i>
            <span>Basketball</span>
          </div>
          <div class="filter-btn d-flex flex-column py-4 pe-5">
            <i class="fa-solid fa-baseball-bat-ball"></i>
            <span>Baseball</span>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xxl-2 py-3" data-bs-toggle="modal" data-bs-target="#modalRegister">
